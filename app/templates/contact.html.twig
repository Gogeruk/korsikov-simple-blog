{% extends 'base.html.twig' %}

{% block title %}Contact Page - Mykyta's Website{% endblock %}

{% block body %}
    <section class="card">
        <h2>Contact Information</h2>
        <p>I avoid social media as much as possible and get most of my information from my RSS aggregators. If you need to reach me, the best way is to email me.</p>

        <img src="{{ asset('assets/images/korsikov_blog_social.webp') }}" alt="Earth Web Image" class="card-image">
    </section>
    <section class="grid-container">
        <div class="grid-item email-icon">
            <a href="mailto:{{ getEnv('blog_email') }}" target="_blank">
                <h3>Email</h3>
            </a>
        </div>
        <div class="grid-item linkedin-icon">
            <a href="{{ getEnv('linkedin_url') }}" target="_blank">
                <h3>LinkedIn</h3>
            </a>
        </div>
        <div class="grid-item github-icon">
            <a href="{{ getEnv('github_url') }}" target="_blank">
                <h3>GitHub</h3>
            </a>
        </div>
        <div class="grid-item instagram-icon">
            <a href="{{ getEnv('instagram_url') }}" target="_blank">
                <h3>Instagram</h3>
            </a>
        </div>
        <div class="grid-item messenger-icon">
            <a href="{{ getEnv('messenger_url') }}" target="_blank">
                <h3>Messenger</h3>
            </a>
        </div>
    </section>
{% endblock %}