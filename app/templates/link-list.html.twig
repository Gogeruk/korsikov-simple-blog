{% extends 'base.html.twig' %}

{% block title %}Cool Links - Mykyta's Website{% endblock %}

{% block body %}
    <section class="card">
        <div class="blog-container">
            <h2>Cool Links</h2>
            <ul id="link-list">
                {% for link in links %}
                    <li>
                        <a href="{{ link.url }}" target="_blank">
                            <div class="link-content">
                                <h3>{{ link.title }}</h3>
                                <p>{{ link.description }}</p>
                            </div>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <img src="{{ asset('assets/images/korsikov_blog_list.webp') }}" alt="Old Scroll Image" class="card-image">
    </section>
{% endblock %}